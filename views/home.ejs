<!--Doctype is HTML5-->
<!DOCTYPE html>
<!--Begining of html-->
<html lang="en">
<!--Begining of head-->

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Stylesheet-->
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <!--Font Awesome-->
    <script src="https://kit.fontawesome.com/6f0f83005a.js" crossorigin="anonymous"></script>
    <!--Title tag-->
    <title>CSV Reader</title>
</head>
<!--End of head-->
<!--Begining of body-->

<body>
    <!--Header-->
    <div id="header">CSV Reader</div>

    <!--Input form div-->
    <div id="input-form">
        <!--Form header-->
        <div id="input-form-header">Upload a new CSV File</div>
        <!--Input multipart form-->
        <form class="form" action="/files/upload" id="myForm" method="POST" enctype="multipart/form-data">
            <input type="file" id="file" name="file" required>
            <input type="submit" id="submit-form" value="Submit">
        </form>
        <!--End of form-->
    </div>
    <!--End of input form div-->

    <!--Files div which displays all the uploaded files-->
    <div id="files">
        <div id="files-header">Uploaded Files</div>
        <ul>
            <% for(let file of files) { %>
                <div class="individual-file">
                    <li><a href="/files/<%= file._id %>">
                            <%= file.original_name %>
                                &nbsp;<i class="fas fa-external-link-square-alt"></i>
                        </a></li>
                    <a href="/files/<%= file._id %>/delete"><i class="fas fa-trash-alt"></i></a>
                </div>
            <% } %>
        </ul>
    </div>
    <!--End of files div-->
    <!--External JS File-->
    <script type="text/javascript" src="/js/script.js"></script>
</body>
<!--End of body-->

</html>
<!--End of html-->